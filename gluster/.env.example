TZ=Europe/Zagreb

# Gluster image (community container)
GLUSTER_IMAGE=ghcr.io/gluster/gluster-containers:centos

# Node identity (set uniquely per host)
NODE_NAME=gluster1

# Persistent host paths (MUST exist; start empty on first run)
GLUSTER_ETC_DIR=/srv/gluster/etc-glusterfs
GLUSTER_LIB_DIR=/srv/gluster/var-lib-glusterd
GLUSTER_LOG_DIR=/srv/gluster/var-log-glusterfs

# Bricks directory (ideally a mounted disk, e.g. /mnt/disk1/bricks)
GLUSTER_BRICKS_DIR=/srv/gluster/bricks

# Bootstrap-only (run on first node):
GLUSTER_PEERS="10.0.0.12 10.0.0.13"
GLUSTER_VOLUME_NAME=gv0
GLUSTER_VOLUME_TYPE=replica
GLUSTER_REPLICA_COUNT=3
GLUSTER_BRICKS="10.0.0.11:/bricks/brick1/gv0 10.0.0.12:/bricks/brick1/gv0 10.0.0.13:/bricks/brick1/gv0"
GLUSTER_AUTH_ALLOW="10.0.0.0/24"

# Exporter port
GLUSTER_EXPORTER_PORT=9713
