COMPOSE_PROJECT_NAME=typesense
TZ=Europe/Zagreb

# Pin versions; "latest" is operational laziness.
TYPESENSE_VERSION=30.0
TYPESENSE_BIND_ADDR=127.0.0.1
TYPESENSE_PORT=8108

# Put the real admin key into ./secrets/typesense_api_key.txt
# If you also want the exporter, it needs the key as an env var (see note in compose):
TYPESENSE_API_KEY=replace-me-if-using-exporter

# CORS: enable only if a browser client directly calls Typesense
TYPESENSE_ENABLE_CORS=false
TYPESENSE_CORS_DOMAINS=

TYPESENSE_ENABLE_ACCESS_LOGGING=false
TYPESENSE_ENABLE_SEARCH_LOGGING=false
TYPESENSE_LOG_SLOW_REQUESTS_TIME_MS=-1

TYPESENSE_ENABLE_SEARCH_ANALYTICS=false
TYPESENSE_ANALYTICS_FLUSH_INTERVAL=3600

# Monitoring
TYPESENSE_EXPORTER_VERSION=0.1.9
TYPESENSE_EXPORTER_LOG_LEVEL=0
TYPESENSE_EXPORTER_BIND_ADDR=127.0.0.1
TYPESENSE_EXPORTER_PORT=8908
TYPESENSE_CLUSTER_NAME=typesense

PROMETHEUS_VERSION=v2.54.1
PROMETHEUS_BIND_ADDR=127.0.0.1
PROMETHEUS_PORT=9090

GRAFANA_VERSION=11.1.5
GRAFANA_BIND_ADDR=127.0.0.1
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-me

# Admin UI
TYPESENSE_DASHBOARD_BIND_ADDR=127.0.0.1
TYPESENSE_DASHBOARD_PORT=3005
