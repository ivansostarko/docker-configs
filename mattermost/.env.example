# ------------------------
# Mattermost
# ------------------------

# Pin a known-good version (do not use :latest in production)
MM_IMAGE_TAG=10.5.8

# Port exposed on the host (remove `ports:` in compose if using a reverse proxy)
MM_PORT=8065

# Public URL of your Mattermost (must match your TLS/proxy setup)
MM_SERVICESETTINGS_SITEURL=https://chat.example.com

# Feature toggles
MM_SERVICESETTINGS_ENABLEINCOMINGWEBHOOKS=true
MM_SERVICESETTINGS_ENABLEOUTGOINGWEBHOOKS=true
MM_SERVICESETTINGS_ENABLECOMMANDS=true
MM_SERVICESETTINGS_ENABLECUSTOMEMOJI=true
MM_SERVICESETTINGS_ENABLELINKPREVIEWS=true

# Logging
MM_LOG_LEVEL=INFO

# ------------------------
# Database (non-secret parts)
# ------------------------
MM_DB_HOST=mattermost-db
MM_DB_PORT=5432
MM_DB_NAME=mattermost
MM_DB_USER=mattermost

# ------------------------
# Metrics (optional)
# ------------------------
MM_METRICS_ENABLE=false
