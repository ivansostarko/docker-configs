# phpMyAdmin
PHPMYADMIN_PORT=8081

# Target DB service name on the same Docker network
PMA_HOST=wordpress-db
PMA_PORT=3306

# Use a restricted DB user (NOT root)
PMA_USER=wp_admin

# Match how you access it from your browser
PMA_ABSOLUTE_URI=http://localhost:8081/

# Import / execution limits
PMA_UPLOAD_LIMIT=256M
PMA_MEMORY_LIMIT=512M
PMA_MAX_EXECUTION_TIME=300

# Optional (recommended): used by config.user.inc.php
# Put the real value in .env (not .env.example) and keep it out of git
PMA_BLOWFISH_SECRET=CHANGE_ME_TO_A_LONG_RANDOM_VALUE
