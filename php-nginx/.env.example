# Core
APP_ENV=production
APP_DEBUG=0

# Nginx
HTTP_PORT=8080
NGINX_SERVER_NAME=localhost
NGINX_PUBLIC_ROOT=/var/www/html/public
CLIENT_MAX_BODY_SIZE=20m

# App / DB (optional; only if your app uses it)
DB_HOST=db
DB_PORT=5432
DB_NAME=app
DB_USER=app

# Optional framework proxy/host hardening
TRUSTED_PROXIES=
TRUSTED_HOSTS=

# Metrics ports
NGINX_EXPORTER_PORT=9113
PHP_FPM_EXPORTER_PORT=9253
