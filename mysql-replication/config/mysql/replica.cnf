[mysqld]
# Replica server
server-id=2

# GTID-based replication
gtid_mode=ON
enforce_gtid_consistency=ON

# Relay log settings
relay_log=relay-bin
relay_log_recovery=ON

# Optional: keep binlogs on the replica to allow promotion
log_bin=mysql-bin
log_replica_updates=ON

# Safety: prevent accidental writes
read_only=ON
super_read_only=ON
