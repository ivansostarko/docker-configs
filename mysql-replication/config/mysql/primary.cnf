[mysqld]
# Primary / source server
server-id=1

# Binary logging (required for replication)
log_bin=mysql-bin
binlog_format=ROW
binlog_row_image=FULL
sync_binlog=1

# GTID-based replication (recommended)
gtid_mode=ON
enforce_gtid_consistency=ON

# If you ever want to re-chain replication (optional, safe)
log_replica_updates=ON

# Binlog retention
binlog_expire_logs_seconds=604800

# Durable DDL
innodb_flush_log_at_trx_commit=1

# Make it explicit
read_only=OFF
super_read_only=OFF
