# General
TZ=Europe/Zagreb
OBS_NETWORK=observability

# Versions (pin these; "latest" is how you get broken on a random Tuesday)
OTEL_COLLECTOR_VERSION=0.104.0
PROMETHEUS_VERSION=v2.54.1
GRAFANA_VERSION=11.2.0
TEMPO_VERSION=2.6.1
LOKI_VERSION=3.1.1

# OTel behavior
OTEL_ENVIRONMENT=prod
OTEL_LOG_LEVEL=info
# Example resource attributes applied at the Collector level (apps can override/extend)
OTEL_RESOURCE_ATTRIBUTES=deployment.environment=prod,service.namespace=platform,cloud.region=eu-central-1

# Prometheus retention
PROMETHEUS_RETENTION=15d

# Grafana
GRAFANA_ROOT_URL=http://localhost:3000
GRAFANA_ADMIN_USER=admin
# For real deployments: do not keep this in .env. Use a secret manager.
GRAFANA_ADMIN_PASSWORD=ChangeMe-LongRandom
