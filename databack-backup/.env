# General
TZ=Europe/Zagreb

# Databack (host published) port
DATABACK_HTTP_PORT=8086

# Databack internal container port
# IMPORTANT: upstream docs use host networking and do not state the internal port.
# If the UI is not reachable, check `docker logs databack` and adjust this.
DATABACK_INTERNAL_PORT=8000

# Databack metadata DB (PostgreSQL in this stack)
DB_NAME=databack
DB_USER=databack

# Local backup storage inside container (used if you select "Local" storage in Databack UI)
BACKUP_LOCAL_DIR=/var/lib/databack/backups

# Optional metrics exporters (Prometheus)
POSTGRES_EXPORTER_PORT=9187
REDIS_EXPORTER_PORT=9121
