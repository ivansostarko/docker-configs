# Public
INFISICAL_PORT=8080
INFISICAL_SITE_URL=https://infisical.example.com

# Generate per Infisical guidance:
# - ENCRYPTION_KEY: random 16 byte hex
# - AUTH_SECRET: random 32 byte base64
INFISICAL_ENCRYPTION_KEY=REPLACE_ME
INFISICAL_AUTH_SECRET=REPLACE_ME

# Postgres
INFISICAL_POSTGRES_DB_DEFAULT=infisical
INFISICAL_POSTGRES_USER=infisical
INFISICAL_POSTGRES_PASSWORD=REPLACE_ME

# Internal connection strings (use service names on the backend network)
INFISICAL_DB_CONNECTION_URI=postgresql://infisical:REPLACE_ME@infisical_postgres:5432/infisical
INFISICAL_REDIS_URL=redis://infisical_redis:6379

# If you enable Redis password (requirepass), use:
# INFISICAL_REDIS_URL=redis://:REPLACE_ME@infisical_redis:6379
