# Cachet
CACHET_PORT=8000
CACHET_APP_ENV=production
CACHET_APP_DEBUG=false
CACHET_APP_URL=https://status.example.com
CACHET_APP_TIMEZONE=Europe/Zagreb
CACHET_APP_LOCALE=en

# IMPORTANT: Cachet requires APP_KEY like "base64:...."
# Generate it inside the container:
#   docker compose exec cachet php artisan key:generate --show
CACHET_APP_KEY=base64:REPLACE_ME

# DB (Cachet side)
CACHET_DB_DRIVER=mysql
CACHET_DB_PORT=3306
CACHET_DB_DATABASE=cachet
CACHET_DB_USERNAME=cachet
# Cachet reads DB_PASSWORD from env (it does not natively support *_FILE here)
CACHET_DB_PASSWORD=REPLACE_ME
CACHET_DB_PREFIX=

# Cache/session/queue
CACHET_CACHE_DRIVER=file
CACHET_SESSION_DRIVER=file
CACHET_QUEUE_DRIVER=sync

# Mail (optional)
CACHET_MAIL_DRIVER=smtp
CACHET_MAIL_HOST=smtp.example.com
CACHET_MAIL_PORT=587
CACHET_MAIL_USERNAME=
CACHET_MAIL_PASSWORD=
CACHET_MAIL_ADDRESS=status@example.com
CACHET_MAIL_NAME=Status Page

# Metrics (optional)
CACHET_DB_EXPORTER_PORT=9104
