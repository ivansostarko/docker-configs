# Images
REDIS_IMAGE=redis:7.4-alpine
REDIS_EXPORTER_IMAGE=oliver006/redis_exporter:v1.67.0
PROMETHEUS_IMAGE=prom/prometheus:v3.5.0
GRAFANA_IMAGE=grafana/grafana:12.1.0

# Publish (bind to localhost by default)
REDIS_MASTER_PUBLISH_ADDR=127.0.0.1
REDIS_MASTER_PUBLISH_PORT=6379

SENTINEL_PUBLISH_ADDR=127.0.0.1
SENTINEL_PUBLISH_PORT=26379

PROMETHEUS_PUBLISH_ADDR=127.0.0.1
PROMETHEUS_PUBLISH_PORT=9090

GRAFANA_PUBLISH_ADDR=127.0.0.1
GRAFANA_PUBLISH_PORT=3000

# Sentinel tuning
SENTINEL_MONITOR_NAME=mymaster
SENTINEL_QUORUM=2
SENTINEL_DOWN_AFTER_MS=5000
SENTINEL_FAILOVER_TIMEOUT_MS=60000
SENTINEL_PARALLEL_SYNCS=1

# Grafana (change immediately)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin-change-me
