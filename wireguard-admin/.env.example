# --- WireGuard transport ---
WG_UDP_PORT=51820

# --- Admin UI binding (SAFEST DEFAULT) ---
# Keep 127.0.0.1 unless you *really* want to expose the UI directly.
WG_UI_BIND=127.0.0.1
WG_UI_PORT=51821

# --- wg-easy optional container config ---
WG_INSECURE=false
WG_DISABLE_IPV6=false

# --- Unattended setup (FIRST START ONLY) ---
# After first successful initialization, remove WG_INIT_* from .env.
WG_INIT_ENABLED=true
WG_INIT_USERNAME=admin
WG_INIT_PASSWORD=CHANGE_ME_TO_A_LONG_RANDOM_SECRET
WG_INIT_HOST=vpn.example.com
WG_INIT_PORT=51820
WG_INIT_DNS=1.1.1.1,8.8.8.8
WG_INIT_IPV4_CIDR=10.8.0.0/24
WG_INIT_IPV6_CIDR=fdcc:ad94:bacf:61a3::/64
