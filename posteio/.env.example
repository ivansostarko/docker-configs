# Timezone
TZ=Europe/Zagreb

# REQUIRED: Your mailserver FQDN (must match DNS + certificates)
POSTE_HOSTNAME=mail.example.com

# REQUIRED: Persistent data directory (bind mount recommended for backups)
POSTE_DATA_DIR=./data

# Optional: only set these if you need non-default ports (leave blank to use defaults)
POSTE_HTTP_PORT=
POSTE_HTTPS_PORT=

# Optional: resource-saving toggles (TRUE disables component)
POSTE_DISABLE_CLAMAV=
POSTE_DISABLE_RSPAMD=
POSTE_DISABLE_ROUNDCUBE=

# Optional: Elasticsearch integration (host:port), e.g. "elasticsearch:9200" when using the elastic profile
POSTE_ELASTICSEARCH=

# Bridge mode only (reverse proxy scenario): set OFF to disable HTTPS redirect
POSTE_HTTPS_REDIRECT_MODE=OFF

# Elasticsearch heap (elastic profile)
ES_HEAP=512m
