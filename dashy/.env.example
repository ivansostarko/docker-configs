# Core
TZ=Europe/Zagreb
DASHY_IMAGE=lissy93/dashy:latest
DASHY_CONTAINER_NAME=dashy
DASHY_HOSTNAME=dashy

# Standalone mode (only if you uncomment ports:)
DASHY_PORT=8080

# Reverse proxy / Traefik
TRAEFIK_ENABLE=true
PROXY_NETWORK=proxy
DASHY_FQDN=dashy.example.com
TRAEFIK_ENTRYPOINTS=websecure
TRAEFIK_TLS=true
# TRAEFIK_MIDDLEWARES=chain-authelia@file

# Dashy HTTP auth (optional; extra friction only)
DASHY_ENABLE_HTTP_AUTH=false
DASHY_BASIC_AUTH_USERNAME=
DASHY_BASIC_AUTH_PASSWORD=
