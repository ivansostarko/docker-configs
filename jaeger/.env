# Core
TZ=Europe/Zagreb
OBS_NETWORK_NAME=observability

# Jaeger versions
JAEGER_VERSION=1.76.0

# Jaeger storage: badger (persistent single-node) or memory (ephemeral)
JAEGER_SPAN_STORAGE_TYPE=badger
JAEGER_BADGER_EPHEMERAL=false

# Jaeger logging / sampling
JAEGER_LOG_LEVEL=info
JAEGER_SAMPLING_RELOAD_INTERVAL=30s
# Use always_off to avoid Jaeger self-traces showing up in UI
JAEGER_SELF_TRACING_SAMPLER=always_off

# Ports (bind to host)
JAEGER_UI_PORT=16686
JAEGER_OTLP_GRPC_PORT=4317
JAEGER_OTLP_HTTP_PORT=4318
JAEGER_ADMIN_PORT=14269

# Optional compatibility ports (leave as-is, or remove from compose if unused)
JAEGER_COLLECTOR_HTTP_PORT=14268
JAEGER_COLLECTOR_GRPC_PORT=14250
JAEGER_ZIPKIN_PORT=9411
JAEGER_AGENT_UDP_COMPACT_PORT=6831
JAEGER_AGENT_UDP_BINARY_PORT=6832
JAEGER_AGENT_CONFIG_PORT=5778

# Metrics stack (optional)
PROMETHEUS_VERSION=v2.54.1
PROMETHEUS_PORT=9090

GRAFANA_VERSION=11.2.2
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ROOT_URL=http://localhost:3000
