TZ=Europe/Zagreb

# Public ports
HTTP_PORT=80
HTTPS_PORT=443

# Domains
PRIMARY_DOMAIN=example.com
DOMAINS=example.com,www.example.com

# Certbot tuning
CERTBOT_RSA_KEY_SIZE=4096
LE_STAGING=1   # set to 0 after validation

# Ops: keep nginx reloading to pick up renewed certs
NGINX_RELOAD_INTERVAL_SECONDS=21600     # 6h
CERTBOT_RENEW_INTERVAL_SECONDS=43200    # 12h

# Metrics ports (optional)
CERT_EXPORTER_PORT=9219
NGINX_EXPORTER_PORT=9113
PROMETHEUS_PORT=9090
