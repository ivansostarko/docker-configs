TZ=Europe/Zagreb
HTTP_PORT=8085

# Pin versions deliberately (avoid :latest in production)
MATOMO_IMAGE=matomo:5.6.2-fpm

# External URL for users. Configure this inside Matomo too (General Settings).
MATOMO_SITE_URL=https://matomo.example.com/

# Internal URL used by the archiver container (reachable inside Docker)
MATOMO_ARCHIVE_URL=http://nginx/

MARIADB_DATABASE=matomo
MARIADB_USER=matomo

MATOMO_DATABASE_ADAPTER=mysql
MATOMO_DATABASE_TABLES_PREFIX=matomo_

# PHP (Matomo container) tuning
PHP_MEMORY_LIMIT=1G
PHP_MAX_EXECUTION_TIME=300
PHP_POST_MAX_SIZE=64M
PHP_UPLOAD_MAX_FILESIZE=64M

# Archiving
ARCHIVE_FREQUENCY_MINUTES=5
CONCURRENT_ARCHIVERS=1

# Monitoring profile ports/retention
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION=15d
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin

MYSQLD_EXPORTER_PORT=9104
BLACKBOX_EXPORTER_PORT=9115
CADVISOR_PORT=8080
