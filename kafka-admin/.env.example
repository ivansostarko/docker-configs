COMPOSE_PROJECT_NAME=kafka-akhq
TZ=Europe/Zagreb

# AKHQ UI
AKHQ_HTTP_PORT=8080

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin

# Kafka KRaft cluster id (must match on all brokers)
# Generate one (Linux/macOS):
#   uuidgen | tr -d '-' | head -c 22
KAFKA_KRAFT_CLUSTER_ID=REPLACE_WITH_A_REAL_CLUSTER_ID

# AKHQ Basic Auth (SHA256 hashes)
# Create hashes:
#   echo -n "password" | sha256sum | awk '{print $1}'
AKHQ_ADMIN_USER=admin
AKHQ_ADMIN_PASSWORD_SHA256=REPLACE_WITH_SHA256_HASH

AKHQ_READER_USER=reader
AKHQ_READER_PASSWORD_SHA256=REPLACE_WITH_SHA256_HASH

# AKHQ JWT secret (required if you want RBAC/groups enforced beyond UI)
# Use 32+ random chars:
#   openssl rand -hex 32
AKHQ_JWT_SECRET=REPLACE_WITH_RANDOM_SECRET
