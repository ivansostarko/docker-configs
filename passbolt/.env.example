# ---------- Core ----------
TZ=Europe/Zagreb

# Pin images. Do NOT keep "latest" for production.
PASSBOLT_IMAGE=passbolt/passbolt:latest-ce
MARIADB_IMAGE=mariadb:10.11

# External URL (must match how users access the service)
APP_FULL_BASE_URL=https://passbolt.example.com

# Ports on the Docker host
PASSBOLT_HTTP_PORT=80
PASSBOLT_HTTPS_PORT=443

# ---------- SMTP (required for registration/recovery/notifications) ----------
EMAIL_DEFAULT_FROM_NAME=Passbolt
EMAIL_DEFAULT_FROM=passbolt@example.com
EMAIL_TRANSPORT_DEFAULT_HOST=smtp.example.com
EMAIL_TRANSPORT_DEFAULT_PORT=587
# Valid values depend on your SMTP server: true/false, tls, ssl, etc. Keep blank to disable.
EMAIL_TRANSPORT_DEFAULT_TLS=true

# ---------- Resource limits (compose deploy.resources is most useful in Swarm; still documents intent) ----------
DB_MEM_LIMIT=1g
DB_MEM_RESERVATION=256m
PASSBOLT_MEM_LIMIT=1g
PASSBOLT_MEM_RESERVATION=256m

# ---------- Monitoring (optional; use: docker compose --profile monitoring up -d) ----------
CADVISOR_PORT=8081
MYSQL_EXPORTER_PORT=9104
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-me-strong
