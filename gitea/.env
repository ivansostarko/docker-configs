# Timezone
TZ=Europe/Zagreb

# Gitea image pin
GITEA_IMAGE_TAG=1.25.2

# Ports
GITEA_HTTP_PORT=3000
GITEA_SSH_PORT=2222

# Public URL identity (must match reality)
GITEA_DOMAIN=gitea.example.com
GITEA_ROOT_URL=https://gitea.example.com/
GITEA_SSH_DOMAIN=gitea.example.com

# Unix ownership for /data inside container
GITEA_UID=1000
GITEA_GID=1000

# Hardening defaults
GITEA_DISABLE_REGISTRATION=true
GITEA_REQUIRE_SIGNIN_VIEW=true

# Admin bootstrap (one-shot container)
GITEA_ADMIN_USER=gitea_admin
GITEA_ADMIN_EMAIL=admin@example.com

# Actions
GITEA_ACTIONS_ENABLED=true
GITEA_RUNNER_NAME=runner-1

# Database
POSTGRES_DB=gitea
POSTGRES_USER=gitea

# Observability (optional profiles: observability)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3300
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=ChangeThisGrafanaPasswordNow
