# Network
MONITORING_NETWORK=monitoring
MONITORING_NETWORK_EXTERNAL=true

# Exporter image/tag
ES_EXPORTER_IMAGE_TAG=latest

# Exporter listen port (host side). Keep bound to localhost unless you know why.
ELASTICSEARCH_EXPORTER_PORT=9114

# Elasticsearch endpoint (NO embedded credentials)
ES_URI=https://elasticsearch:9200

# Scrape behavior / load control
ES_TIMEOUT=10s
ES_ALL=false
ES_INDICES=false
ES_SHARDS=false
ES_INDICES_SETTINGS=false
ES_INDICES_MAPPINGS=false
ES_CLUSTERSETTINGS=false
ES_SNAPSHOTS=false
ES_HEALTH_REPORT=false
ES_ILM=false
ES_DATA_STREAM=false

# TLS to Elasticsearch
ES_SSL_SKIP_VERIFY=false

# Logging
ES_EXPORTER_LOG_LEVEL=info
ES_EXPORTER_LOG_FORMAT=logfmt
