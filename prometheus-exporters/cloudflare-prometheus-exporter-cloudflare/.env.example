# =========================
# Cloudflare Prometheus Exporter
# =========================

# ---- AUTH ----
# ENV mode (docker-compose.yml):
#   Set CF_API_TOKEN here.
# Secrets mode (docker-compose.secrets.yml):
#   Leave CF_API_TOKEN empty and set secrets/cf_api_token.txt instead.
CF_API_TOKEN=

# Optional: restrict to specific zones (comma-separated Cloudflare Zone IDs)
CF_ZONES=
CF_EXCLUDE_ZONES=

# ---- Exporter listen/scrape tuning ----
CF_EXPORTER_PORT=8080
CF_EXPORTER_LISTEN=:8080
CF_EXPORTER_METRICS_PATH=/metrics

# Scrape interval is what the exporter uses to call Cloudflare APIs internally.
# Keep this conservative for large accounts to reduce rate-limit risk.
CF_EXPORTER_SCRAPE_INTERVAL=60
CF_EXPORTER_SCRAPE_DELAY=300
CF_EXPORTER_TIMEOUT=10s

# Cloudflare "free tier" tweaks if applicable
CF_EXPORTER_FREE_TIER=false

# Logging: error|info|debug (use debug only temporarily)
CF_EXPORTER_LOG_LEVEL=error

# Optional: comma-separated denylist of metrics names/keys (reduces cardinality)
CF_EXPORTER_METRICS_DENYLIST=
