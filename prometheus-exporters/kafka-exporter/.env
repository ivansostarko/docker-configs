# --- Networking / ports
KAFKA_EXPORTER_PORT=9308
MONITORING_NETWORK_NAME=monitoring
KAFKA_NETWORK_NAME=kafka

# --- Kafka bootstrap brokers (comma-separated)
# IMPORTANT: these hostnames must resolve from inside the kafka network.
KAFKA_BROKERS=broker-1:9092,broker-2:9092,broker-3:9092

# --- Kafka protocol version compatibility
# Set this to match your broker major/minor (or the closest supported value).
KAFKA_VERSION=3.9.0

# --- Labels / filtering (these matter on large clusters)
KAFKA_LABELS=prod-cluster
TOPIC_FILTER=.*
TOPIC_EXCLUDE=^$
GROUP_FILTER=.*
GROUP_EXCLUDE=^$

# --- Performance / scrape behavior
REFRESH_METADATA=30s
OFFSET_SHOW_ALL=true
CONCURRENT_ENABLE=false
TOPIC_WORKERS=100

# --- SASL (optional)
SASL_ENABLED=false
SASL_USERNAME=
SASL_MECHANISM=plain   # plain, scram-sha256, scram-sha512, gssapi, awsiam
SASL_HANDSHAKE=true

# For AWS MSK IAM SASL (if used)
AWS_REGION=

# --- TLS to Kafka (optional)
TLS_ENABLED=false
TLS_SERVER_NAME=
TLS_INSECURE_SKIP_VERIFY=false
TLS_CA_FILE=/etc/kafka-exporter/certs/ca.crt
TLS_CERT_FILE=/etc/kafka-exporter/certs/client.crt
TLS_KEY_FILE=/etc/kafka-exporter/certs/client.key
