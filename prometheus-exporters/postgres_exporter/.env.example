# Exporter
POSTGRES_EXPORTER_IMAGE=prometheuscommunity/postgres-exporter:latest
POSTGRES_EXPORTER_PORT=9187
POSTGRES_EXPORTER_LOG_LEVEL=info

# Target Postgres (service DNS name reachable from the "monitoring" network)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DATABASE=postgres
POSTGRES_SSLMODE=disable

# Network name override (optional)
MONITORING_NETWORK_NAME=monitoring
