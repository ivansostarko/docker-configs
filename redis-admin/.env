# Exposure model (leave as 127.0.0.1 unless you add a reverse proxy + auth)
REDISINSIGHT_BIND=127.0.0.1
REDISINSIGHT_PORT=5540

REDIS_COMMANDER_BIND=127.0.0.1
REDIS_COMMANDER_PORT=8081

PROMETHEUS_BIND=127.0.0.1
PROMETHEUS_PORT=9090

GRAFANA_BIND=127.0.0.1
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin

# Redis Insight settings
RI_LOG_LEVEL=info

# This key encrypts Redis Insight local storage (keep stable if you persist redisinsight-data)
# Recommended: store the real value in secrets/ri_encryption_key.txt and export it at runtime.
RI_ENCRYPTION_KEY=change-me-32+chars-min

# Convenience-only (NOT recommended): used only if you uncomment preconfig env vars
REDIS_PASSWORD=do-not-store-here-if-you-care
RC_HTTP_USER=admin
RC_HTTP_PASSWORD=change-me
