TZ=Europe/Zagreb

APP_NAME="Laravel12"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_HTTP_PORT=8000

# Octane (FrankenPHP)
OCTANE_SERVER=frankenphp
OCTANE_WORKERS=auto
OCTANE_MAX_REQUESTS=500
OCTANE_WATCH=1

# Reverb
REVERB_APP_ID=local
REVERB_APP_KEY=local
REVERB_APP_SECRET=local
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=http

# Cache / Session / Queue defaults
CACHE_STORE=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Databases (enable via profiles)
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=laravel
DB_PASSWORD=

# MariaDB alternative
MARIADB_HOST=mariadb
MARIADB_PORT=3306

# Mongo
MONGO_ROOT_USER=root
MONGO_URI=mongodb://root:password@mongo:27017
MONGO_DB=laravel

# Beanstalkd
BEANSTALKD_HOST=beanstalkd
BEANSTALKD_PORT=11300

# RabbitMQ
RABBITMQ_USER=laravel
RABBITMQ_PASSWORD=

# Kafka
KAFKA_BROKERS=kafka:9092

# Telescope / Pulse / Horizon (secure in prod)
TELESCOPE_ENABLED=true
PULSE_ENABLED=true

# Scout + Typesense
SCOUT_DRIVER=typesense
TYPESENSE_HOST=typesense
TYPESENSE_PORT=8108
TYPESENSE_PROTOCOL=http
TYPESENSE_API_KEY=

# Logstash logging target
LOGSTASH_HOST=logstash
LOGSTASH_PORT=5000

# Sentry
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# Optional monitoring ports
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
