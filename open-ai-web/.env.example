# ------------------------
# Open WebUI
# ------------------------

# Port mapping (host -> container 8080)
OLLAMA_GUI_PORT=3000

# Ollama endpoint used by Open WebUI (within the Compose network)
OLLAMA_BASE_URL=http://ollama:11434

# Public URL (used for redirects / external links; adjust for your domain / reverse proxy)
OPEN_WEBUI_PUBLIC_URL=http://localhost:3000

# Image tag pin for reproducible deployments (avoid :main)
OPEN_WEBUI_TAG=v0.6.41

# Strong secret for session/login persistence
# Generate: openssl rand -hex 32
OPEN_WEBUI_SECRET_KEY=REPLACE_ME_WITH_A_REAL_SECRET

# Optional: lock down signups
OPEN_WEBUI_ENABLE_SIGNUP=false
