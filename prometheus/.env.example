# Ports
PROMETHEUS_PORT=9090

# Image pinning (recommended)
PROMETHEUS_IMAGE_TAG=v2.54.1

# Retention policy
PROMETHEUS_RETENTION_TIME=15d
# 0 disables size retention; otherwise e.g. 20GB
PROMETHEUS_RETENTION_SIZE=0

# Logging
PROMETHEUS_LOG_LEVEL=info

# If running behind reverse proxy
PROMETHEUS_EXTERNAL_URL=https://prometheus.example.com
PROMETHEUS_ROUTE_PREFIX=/

# Run as non-root (matches 'nobody' defaults)
PROMETHEUS_UID=65534
PROMETHEUS_GID=65534
