# Ports
MINIO_API_PORT=9000
MINIO_WEB_PORT=9001

# URLs (set these correctly when behind a reverse proxy / TLS)
MINIO_SERVER_URL=https://s3.example.com
MINIO_BROWSER_REDIRECT_URL=https://minio.example.com

# Optional
MINIO_REGION_NAME=us-east-1
MINIO_STORAGE_CLASS_STANDARD=EC:2

# Metrics auth mode:
# jwt (recommended) or public (testing only)
MINIO_PROMETHEUS_AUTH_TYPE=jwt

# Optional: bucket to auto-create in init container
MINIO_DEFAULT_BUCKET=app-data
