# Core
TZ=Europe/Zagreb

# Bacula component names (must match across configs)
BACULA_DIR_NAME=bacula-dir
BACULA_SD_NAME=bacula-sd
BACULA_FD_NAME=bacula-fd

# Catalog DB
DB_HOST=db
DB_PORT=5432
DB_NAME=bacula
DB_USER=bacula

# If you refuse to use docker secrets, this is used by the DB container:
DB_PASSWORD_FALLBACK=ChangeMe-UseSecretsInstead

# Storage volume inside bacula-sd
STORAGE_ARCHIVE_DIR=/opt/bacula/archive
STORAGE_MAX_BYTES=50G

# What to back up (host path)
BACKUP_SOURCE_PATH=/srv

# Optional Bacula-Web
BACULA_WEB_PORT=8080

# Optional metrics
BACULA_EXPORTER_PORT=33407
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=ChangeMeNow
