# ---- Postal identity (must match DNS) ----
POSTAL_DNS_HOSTNAME=postal.example.com
POSTAL_WEB_HOSTNAME=postal.example.com

# Safer host port bindings
POSTAL_SMTP_HOST_PORT=2525
POSTAL_WEB_HOST_PORT=8088
POSTAL_TRACKING_HOST_PORT=8089

# Optional resource limit (compose-only; documents intent)
POSTAL_MEM_LIMIT=2g

# ---- MariaDB ----
POSTAL_DB_NAME=postal
POSTAL_DB_USER=postal
POSTAL_DB_PASSWORD=change_me_strong
POSTAL_DB_ROOT_PASSWORD=change_me_stronger

# ---- RabbitMQ ----
RABBITMQ_DEFAULT_USER=postal
RABBITMQ_DEFAULT_PASS=change_me_strong
RABBITMQ_DEFAULT_VHOST=/postal
RABBITMQ_GUI_HOST_PORT=15672
RABBITMQ_METRICS_HOST_PORT=15692

# ---- Postal bootstrap admin ----
POSTAL_ADMIN_EMAIL=admin@example.com
POSTAL_ADMIN_FNAME=Admin
POSTAL_ADMIN_LNAME=User
POSTAL_ADMIN_PASS=change_me_strong

# ---- Optional metrics ----
POSTAL_MARIADB_EXPORTER_HOST_PORT=9104
