# Versions
POSTGRES_IMAGE=postgres:16

# Ports (host:container)
PG_PRIMARY_PORT=5432
PG_REPLICA1_PORT=5433

# DB defaults
POSTGRES_DB=appdb
POSTGRES_USER=appuser

# Replication
REPL_USER=repl_user
REPL_SLOT=replica1_slot

# Network allow-list (adjust to your Docker network range)
# Keep this tight. Do not use 0.0.0.0/0 in real deployments.
REPL_NETWORK_CIDR=172.20.0.0/16

# Monitoring
PROMETHEUS_PORT=9090
EXPORTER_PRIMARY_PORT=9187
EXPORTER_REPLICA1_PORT=9188

# Compose project naming (optional)
COMPOSE_PROJECT_NAME=pg-repl
