# Elasticsearch image versions
ELASTIC_VERSION=8.13.4

# Exporter version (prometheuscommunity/elasticsearch-exporter)
ES_EXPORTER_VERSION=v1.7.0

# Ports
ES_HTTP_PORT=9200
ES_EXPORTER_PORT=9114

# Cluster naming
ES_CLUSTER_NAME=prod-es

# JVM sizing (set based on host; do not exceed ~50% RAM; keep Xms=Xmx)
ES_JAVA_OPTS=-Xms1g -Xmx1g
