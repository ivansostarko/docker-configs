# ---- general ----
TZ=Europe/Zagreb
N8N_PORT=5678

# Pin versions in prod; "latest" is risky.
# Example: N8N_IMAGE_TAG=1.###.#
N8N_IMAGE_TAG=latest

# ---- public URL settings (fix webhooks + cookies behind proxies) ----
N8N_HOST=n8n.example.com
N8N_PROTOCOL=https
WEBHOOK_URL=https://n8n.example.com/

# For local HTTP-only testing (no TLS), you may set:
# N8N_PROTOCOL=http
# WEBHOOK_URL=http://localhost:5678/
# And only then consider: N8N_SECURE_COOKIE=false
N8N_SECURE_COOKIE=true

# ---- postgres ----
N8N_DB_NAME=n8n
N8N_DB_USER=n8n
