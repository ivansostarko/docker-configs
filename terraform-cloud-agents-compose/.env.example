# ------------------------
# General
# ------------------------
TZ=Europe/Zagreb

# ------------------------
# Terraform runner settings
# ------------------------
TF_LOG=INFO
TF_INPUT=0

# Cloudflare sample (Terraform reads TF_VAR_* automatically)
TF_VAR_cloudflare_zone_id=replace-with-your-zone-id
TF_VAR_cloudflare_record_name=terraform-agent-demo
TF_VAR_cloudflare_record_type=A
TF_VAR_cloudflare_record_value=203.0.113.10
TF_VAR_cloudflare_record_ttl=300
TF_VAR_cloudflare_record_proxied=false

# ------------------------
# HCP Terraform / Terraform Cloud Agent settings
# ------------------------
# Optional: defaults to https://app.terraform.io
TFC_ADDRESS=https://app.terraform.io

# Automatic updates behavior: minor|patch|disabled (HashiCorp default is minor)
TFC_AGENT_AUTO_UPDATE=patch

# Optional capability acceptance (e.g., enable search queries):
# TFE_AGENT_ACCEPT=query
TFE_AGENT_ACCEPT=

# Human-friendly names (appear in UI)
TFC_AGENT_1_NAME=agent-1
TFC_AGENT_2_NAME=agent-2
TFC_AGENT_3_NAME=agent-3

# ------------------------
# Metrics profile (optional)
# ------------------------
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
CADVISOR_PORT=8080
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
