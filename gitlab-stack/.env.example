# Core
TZ=Europe/Zagreb
GITLAB_HOME=./_gitlab

# Network (static subnet so monitoring allowlist is stable)
GITLAB_SUBNET=172.30.0.0/24
GITLAB_IP=172.30.0.10
POSTGRES_IP=172.30.0.11
REDIS_IP=172.30.0.12
PROMETHEUS_IP=172.30.0.20

# GitLab image (pin this in real environments; do NOT run "latest" long-term)
GITLAB_IMAGE=gitlab/gitlab-ce
GITLAB_IMAGE_TAG=latest

# GitLab identity (use a real hostname)
GITLAB_HOSTNAME=gitlab.example.com
GITLAB_EXTERNAL_URL=http://gitlab.example.com

# Ports
GITLAB_HTTP_PORT=8080
GITLAB_HTTPS_PORT=8443
GITLAB_SSH_PORT=2424
GITLAB_REGISTRY_PORT=5050
# GITLAB_REGISTRY_EXTERNAL_URL=http://registry.example.com:5050

# Postgres
POSTGRES_IMAGE_TAG=16.11-alpine
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=gitlabhq_production
POSTGRES_USER=gitlab

# Redis
REDIS_IMAGE_TAG=7.4-alpine
REDIS_HOST=redis
REDIS_PORT=6379

# Monitoring (optional)
PROMETHEUS_IMAGE_TAG=v2.55.1
PROMETHEUS_PORT=9090
POSTGRES_EXPORTER_IMAGE_TAG=v0.16.0
POSTGRES_EXPORTER_PORT=9187
REDIS_EXPORTER_IMAGE_TAG=v1.66.0
REDIS_EXPORTER_PORT=9121
GRAFANA_IMAGE_TAG=11.3.0
GRAFANA_PORT=3000
