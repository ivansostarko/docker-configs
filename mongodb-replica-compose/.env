# ---------- Core MongoDB ----------
MONGO_VERSION=7.0

# Replica set
MONGO_REPLICA_SET=rs0

# Published port for a single "entry" node (mongo1). For production, consider putting a TCP LB in front.
MONGO_PUBLISHED_PORT=27017

# Root (admin) user is created on mongo1 only; password is sourced from secrets/mongo_root_password.txt
MONGO_ROOT_USERNAME=root

# Optional application user (created by mongo-init); password is sourced from secrets/mongo_app_password.txt
MONGO_APP_DB=appdb
MONGO_APP_USERNAME=appuser

# Hosts used in connection strings (keep in sync with service names / ports)
MONGO_URI_HOSTS=mongo1:27017,mongo2:27017,mongo3:27017

# ---------- MongoDB Exporter / Monitoring ----------
MONGO_EXPORTER_VERSION=0.40
MONGO_EXPORTER_USERNAME=exporter
# Exporter uses env vars MONGODB_USER/MONGODB_PASSWORD and connects to the replica set hosts below:
MONGO_EXPORTER_URI_HOSTS=${MONGO_URI_HOSTS}

MONGO_EXPORTER_PUBLISHED_PORT=9216
PROMETHEUS_VERSION=v2.53.3
PROMETHEUS_PUBLISHED_PORT=9090

GRAFANA_VERSION=11.3.0
GRAFANA_PUBLISHED_PORT=3000
