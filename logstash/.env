# Core
COMPOSE_PROJECT_NAME=logstash
STACK_VERSION=8.15.3

# Networking
PUBLIC_NET=observability_public
PRIVATE_NET=observability_private

# Logstash ports
LOGSTASH_BEATS_PORT=5044
LOGSTASH_SYSLOG_TCP=5514
LOGSTASH_SYSLOG_UDP=5514
LOGSTASH_HTTP_PORT=8080
LOGSTASH_API_PORT=9600

# Elasticsearch destination (can be external)
ELASTICSEARCH_HOSTS=https://elasticsearch:9200
ELASTIC_USERNAME=elastic
ELASTIC_CA_CERT=/run/secrets/elastic_ca_crt

# Index naming
LS_INDEX_PREFIX=logs

# JVM sizing
LS_JAVA_HEAP=1g

# Prometheus exporter
LOGSTASH_EXPORTER_PORT=9198

# Beats output to Logstash
FILEBEAT_TO_LOGSTASH_HOST=logstash
FILEBEAT_TO_LOGSTASH_PORT=5044

METRICBEAT_TO_ELASTICSEARCH_HOSTS=https://elasticsearch:9200
HEARTBEAT_TO_ELASTICSEARCH_HOSTS=https://elasticsearch:9200

# Optional: enable debug stdout output pipeline
ENABLE_DEBUG_STDOUT=false
