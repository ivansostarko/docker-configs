# =========================
# App
# =========================
NODE_ENV=production
API_PORT=3000
LOG_LEVEL=info

# =========================
# HTTP ingress (nginx)
# =========================
HTTP_PORT=8080

# =========================
# Postgres
# =========================
POSTGRES_DB=app
POSTGRES_USER=app
# Password is stored in ./secrets/postgres_password.txt

# Connection used by the API
DATABASE_URL=postgresql://app:__READ_FROM_SECRET__@postgres:5432/app

# =========================
# Redis
# =========================
REDIS_URL=redis://redis:6379

# =========================
# Observability
# =========================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
